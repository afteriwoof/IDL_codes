pro maths

;floating point
x = 2.
y = 3.
print, 'x=',x,' y=',y,' x/y=',x/y

;integer
x = 2
y = 3
print, 'x=',x,' y=',y,' x/y=',x/y

print, '---------'
print, 'complex no.:', complex(3,2)
print, 'sqrt(-1)=', sqrt(complex(-1,0))
print, 'atan(-1)/PI =', atan(-1)/!pi

print, '---------'
i=1
print, 'Integers: i=',i,' i+1=',i+1

i=32767
print, 'Integers: i=',i,' i+1=',i+1

i=32767l
print, 'Long integers: i=',i,' i+1=',i+1

print, '---------'
x=float([1,2,3,4,5])
print, 'vector x=',x
print, 'x^2=', x^2
print, '1/x=',1./x
print, 'x[0]=',x[0]
print, 'min(x)=',min(x)
print, 'max(x)=',max(x)
print, 'sum of all x =', total(x)
print, 'reverse(x) =', reverse(x)
print, 'shift x by one:', shift(x,-1)
print, 'statistics of x: ', moment(x)
help, x

y=replicate(2.,n_elements(x))
print, 'x=',x
print, 'y=',y
print, 'y^x=',y^x

print, '---------'
nran=5
myseed=-1234
x=randomu(myseed,nran)
print, 'x=',x
index=sort(x)
xs=x[index]
print, 'sorting x:', xs
print, 'where is x>0.5:', where(x gt 0.5)
print, 'and its values are:', x[where(x gt 0.5)]

index_where_x_gt_onehalf = where(x gt 0.5)
print, 'x=',x
print, 'x is gt 1/2 at indices:', where(x gt 0.5)
index=where(x gt 1)
print, 'index where x>1 =', index

print, '---------'
for i=0,2 do print, 'i=',i

i=0
while (i lt 10) do begin print, 'i=',i & i=i+1
end
